{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "useUnknownInCatchVariables": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "types/"
        ],
        "noFallthroughCasesInSwitch": true,
    },
    "exclude": [
        "node_modules"
    ]
}